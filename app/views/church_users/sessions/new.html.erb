<%= form_with(url: church_user_session_path) do |f| %>
  <div class="d-flex flex-column align-items-center justify-content-center bg-light w-100 vh-100">
    <div class="my-5 small-shadow bg-white rounded" style="max-width: 400px;">
      <div class="text-center py-3">
        <h2 class="h4">Church App - Login</h2>
      </div>

      <div class="px-4 pb-4">
        <label for="email" class="form-label"><%= I18n.t('.email') %></label>
        <%= f.email_field :email, class: 'form-control', placeholder: I18n.t('.email'), type: :email %>
      </div>

      <div class="px-4 pb-4">
        <label for="password" class="form-label"><%= I18n.t('.password') %></label>
        <%= f.password_field :password, class: 'form-control', placeholder: I18n.t('.password') %>
      </div>

      <div class="px-4 pb-4">
        <%= f.check_box :remember_me %>
        <label class="form-check-label" for="remember_me"><%= I18n.t('.remember_me') %></label>
      </div>

      <div class="px-4 pb-4 text-center">
        <%= f.submit I18n.t('.sign_in'), class: "btn btn-primary btn-block text-center w-100" %>
      </div>

      <div class="px-4 pb-4 text-center">
        <%= link_to I18n.t('.sign_up'), new_registration_path(resource_name), class: 'btn btn-light text-decoration-none' %>
        <%= link_to I18n.t('.forgot_password'), new_password_path(resource_name), class: 'btn btn-light text-decoration-none' %>
      </div>
    </div>
  </div>
<% end %>



